{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "es2020", // can be changed to node16 when support for node 14 is dropped
    "esModuleInterop": true,
    "target": "es2020",
    "allowJs": true,
    "resolveJsonModule": false,
    "jsx": "react"
  },
  "include": ["./src/"]
}
